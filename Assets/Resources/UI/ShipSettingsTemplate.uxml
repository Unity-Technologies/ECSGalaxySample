            <ui:TextField label="Max Speed" name="max-speed-field" class="settings-text-field" />
            <ui:TextField label="Acceleration" name="acceleration-field" class="settings-text-field" />
            <ui:TextField label="Steering Sharpness" name="steering-sharpness-field" class="settings-text-field" />
            <ui:Label text="CONSTRUCTION" class="subtitle" />
            <ui:TextField label="Value" name="construction-value-field" class="settings-text-field" />
