<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="ship-settings-section" style="margin-top: 10px; margin-bottom: 10px;">
        <ui:VisualElement name="subtitle-container" style="flex-direction: row; align-items: center; padding-left: 10px; background-color: rgba(99, 106, 111, 0.74);">
            <ui:Label tabindex="-1" text="SECTION NAME" parse-escape-sequences="true" display-tooltip-when-elided="true" name="section-title-label" style="font-size: 20px; -unity-font-style: bold;" />
        </ui:VisualElement>
        <ui:VisualElement style="flex-grow: 1; padding-right: 15px; padding-top: 0; padding-bottom: 0; padding-left: 15px;">
